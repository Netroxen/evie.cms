{% extends 'base/base.html.j2' %}

{% block title %}Register{% endblock %}

{% block content %}

<form action="{{ request.path }}" method="POST" enctype="multipart/form-data">

  <div class="row justify-content-center py-6">
    <div class="col-lg-5 col-md-7">

      <div class="card bg-secondary shadow border-0">
        <div class="card-header bg-transparent pb-5">
          <div class="text-muted text-center mt-2 mb-3"><small>Register with</small></div>
          <div class="btn-wrapper text-center">
            <a href="#" class="btn btn-neutral btn-icon disabled">
              <span class="btn-inner--icon"><img src="{{ url_for('static', filename='img/icons/github.svg') }}"></span>
              <span class="btn-inner--text">Github</span>
            </a>
            <a href="#" class="btn btn-neutral btn-icon disabled">
              <span class="btn-inner--icon"><img src="{{ url_for('static', filename='img/icons/google.svg') }}"></span>
              <span class="btn-inner--text">Google</span>
            </a>
          </div>
        </div>
        <div class="card-body px-lg-5 py-lg-5">
          <div class="text-center text-muted mb-4">
            <small>Or register with credentials</small>
          </div>
          <div class="form-group mb-3">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="jam jam-user"></i></span>
              </div>
              {{ form.username(class_='form-control', placeholder=form.username.label.text) }}
            </div>
          </div>
          <div class="form-group mb-3">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="jam jam-envelope"></i></span>
              </div>
              {{ form.email(class_='form-control', placeholder=form.email.label.text) }}
            </div>
          </div>
          <div class="form-group">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="jam jam-key"></i></span>
              </div>
              {{ form.password(class_='form-control', placeholder=form.password.label.text) }}
            </div>
          </div>
          <div class="form-group">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="jam jam-key-f"></i></span>
              </div>
              {{ form.confirm_password(class_='form-control', placeholder=form.confirm_password.label.text) }}
            </div>
          </div>
          <div class="text-center">
            {{ form.submit(class_='btn btn-primary my-4') }}
          </div>
        </div>
      </div>

      <div class="row mt-3">

        <div class="col-12 text-center">
          <a href="{{ url_for('auth.login') }}" class="text-light"><small>Use existing account</small></a>
        </div>

      </div>

    </div>
  </div>

  {{ form.hidden_tag() }}

</form>

{% endblock %}
